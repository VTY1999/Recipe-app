<%= form_with(model: @recipe) do |form| %>

  <div class="field">
    <%= form.label :name, class: "label" %>
    <div class="control">
      <%= form.text_field :name, autofocus: true, class: "input", required: true %>
    </div>
  </div>

  <div class="">
      <%= form.label :preparation_time, class: "label" %>
        <%= form.text_field :preparation_time, class: "input", required: true %>
  </div>

  <div class="field">
    <%= form.label :description, class: "label" %>
    <div class="control">
      <%= form.text_area :description, class: "textarea", required: true %>
    </div>
  </div>

  <div class="field">
    <%= form.check_box :public %>
    <%= form.label :public, class: "checkbox" %>
  </div>

  <div class="actions">
    <%= form.submit class: "button is-success" %>
  </div>
<% end %>
